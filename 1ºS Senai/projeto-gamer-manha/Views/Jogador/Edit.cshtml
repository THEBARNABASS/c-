@model Jogador

<head>
    <link rel="stylesheet" href="~/css/editar.css">
</head>

@{
    ViewData["Title"] = "Edit";
}


@if (ViewBag.UserName == null)
{
<a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">
Login
</a>   
}
else
{
    <section class="container-grid cadastro-equipes">

<form method="post" action="@Url.Action("Atualizar")" class="frm-cad-equipe">
<div class="cadequipe-titulo">
<h1>Edição de Jogadores</h1>
<hr>
</div>
    <input  type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">

    <label for="">Nome</label>
    <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:" name="Nome" value="@ViewBag.Jogador.Nome">

    <label for="">Email</label>
    <input  class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:" name="Email" value="@ViewBag.Jogador.Email">

    <label for="">Senha</label>
    <input class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:" name="Senha" value="@ViewBag.Jogador.Senha">

    <label for="">Equipe</label>
    
    <select name="IdEquipe" id="IdEquipe">

        <option value="0">Selecione uma opção: </option>

        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            @if (equipe.IdEquipe == @ViewBag.Jogador.IdEquipe)
            {
                <option value="@equipe.IdEquipe" selected>@equipe.Nome</option>
            }
            else
            {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
            }
        }
    </select>

    <button type="submit">Atualizar</button>

</form>
</section>
}
